<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.play_song_category.PlayMusicFragment">

    <LinearLayout
        android:id="@+id/lin1_layout_pmf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_iv_song_pmf"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_app_40" />

        <TextView
            android:id="@+id/tv_song_name_pmf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_song"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/geek_blue_6"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/lin_layout_pmf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin3_layout_pmf"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seek_bar_pmf"
            android:layout_width="320dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:progressTint="@color/geek_blue_2"
            android:thumbTint="@color/geek_blue_6" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_progress_pmf"
                android:layout_marginRight="230dp"
                android:text="@string/no_time_seek_bar"
                android:textColor="@color/geek_blue_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_duration_pmf"
                android:layout_height="wrap_content"
                android:text="@string/no_time_seek_bar"
                android:textColor="@color/geek_blue_6"
                android:layout_width="wrap_content"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3_layout_pmf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">


        <ImageView
            android:id="@+id/iv_pre_pmf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_previous_55" />

        <ImageView
            android:id="@+id/iv_play_pmf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_play_circle_outline_75" />

        <ImageView
            android:id="@+id/iv_next_pmf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_next_55" />

    </LinearLayout>

</RelativeLayout>