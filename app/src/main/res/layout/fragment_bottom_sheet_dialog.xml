<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_bt_sheet_df"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/comment"
        android:textColor="@color/geek_blue_6"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_comment_df"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/tv_bt_sheet_df"/>

    <RelativeLayout
        android:id="@+id/rel_df"
        android:layout_below="@id/rec_comment_df"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:background="@drawable/bg_et"
            android:layout_width="350dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/et_comment_df"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_width="330dp"
                android:layout_height="40dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_send_df"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_send_40" />
    </RelativeLayout>
</RelativeLayout>